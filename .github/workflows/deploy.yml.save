name: Deploy to Server

on:
  push:
    branches:
      - server  # Déclencher l'action uniquement quand il y a un push sur la branche `server`

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Set up SSH
        uses: webfactory/ssh-agent@v0.5.3
        with:
          ssh-private-key: ${{ secrets.SSH_KEY }}

      - name: Copy Files to Server
        run: |
          rsync -avz --delete --exclude='.git' . <utilisateur>@<IP_du_serveur>:/var/www/TalibHub
        env:
          SSH_KNOWN_HOSTS: ${{ secrets.SSH_KNOWN_HOSTS }}

      - name: Generate Build Hash with Timestamp
        run: |
          echo "// Généré automatiquement le $(date)" > Front-End/build/build-info.js
          echo "export const BUILD_HASH = \"$(git rev-parse --short HEAD)-$(date +%s)\";" >> Front-End/build/build-info.js
          echo "export const BUILD_DATE = \"$(date -u +"%Y-%m-%dT%H:%M:%SZ")\";" >> Front-End/build/build-info.js
          echo "export function checkBuildHash(clearDataCallback) { /* Votre code existant */ }" >> Front-End/build/build-info.js

      - name: Update Version
        run: |
          node Front-End/scripts/update-version.js
